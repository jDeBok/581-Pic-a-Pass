/* tabs */
QTabWidget::pane {
	background-color: black; /* set the background color */
}

QTabBar::tab {
	background: qradialgradient( /* background set to a radial gradient */
		cx:1, cy:0,		 /* Center at top-right */
		radius:1,        /* set the radius to the size of the screen */
		fx:1, fy:0,      /* focal point at top-right */
		stop:0 #003461,  /* start of gradient */
		stop:1 #001F41   /* end of gradient */
	);
	color: white;            /* Tab text color */
	border-radius: 4px 4px 0 0; /* Rounded top corners */
	font-size: 24px; /* font size */
}

QTabBar::tab:hover {
	background: qradialgradient( /* background set to a radial gradient */
		cx:1, cy:0,		 /* Center at top-right */
		radius:1,        /* set the radius to the size of the screen */
		fx:1, fy:0,      /* focal point at top-right */
		stop:0 #001F3B,  /* start of gradient */
		stop:1 #001228   /* end of gradient */
	);
}

/* gray */
QTabBar::tab:selected {
	background: #8F9396; /* regular color same as background gray */
	color: white;            /* Active tab text color */
}

QTabBar::tab:selected:hover {
	background: #8F9396; /* hover color no change */
}