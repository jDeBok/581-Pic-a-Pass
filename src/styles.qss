/* college navy */
QPushButton {
	background: qradialgradient( /* background set to a radial gradient */
		cx:1, cy:0,		 /* Center at top-right */
		radius:1,        /* set the radius to the size of the screen */
		fx:1, fy:0,      /* focal point at top-right */
		stop:0 #003461,  /* start of navy gradient */
		stop:1 #001F41   /* end of navy gradient */
	);
	color: white; /* text color white */
	border-style: outset; /* set the border style */
	border-width: 1px; /* set the border width */
	border-radius: 5px; /* set the border radius */
	border-color: black; /* set the border color to black */
	padding: 5px; /* set the padding */
	font-size: 24px; /* set the font size */
}

QPushButton:hover {
	background: qradialgradient( /* background set to a radial gradient */
		cx:1, cy:0,		 /* Center at top-right */
		radius:1,        /* set the radius to the size of the screen */
		fx:1, fy:0,      /* focal point at top-right */
		stop:0 #001F3B,  /* start of darker navy gradient */
		stop:1 #001228   /* end of darker navy gradient */
	);
}

